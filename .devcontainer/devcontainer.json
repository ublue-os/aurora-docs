// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Aurora Documentation Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:3-22-bookworm",
  "features": {
    "ghcr.io/devcontainers-community/npm-features/prettier:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "streetsidesoftware.code-spell-checker",
        "yzhang.markdown-all-in-one",
        "davidanson.vscode-markdownlint",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },
  "postCreateCommand": "npm install && echo 'Development environment ready!'",
  "forwardPorts": [3000, 3001],
  "portsAttributes": {
    "3000": {
      "label": "Docusaurus Dev Server",
      "onAutoForward": "notify"
    },
    "3001": {
      "label": "Docusaurus Production Server",
      "onAutoForward": "silent"
    }
  },
  "remoteEnv": {
    "NODE_ENV": "development",
    "FORCE_COLOR": "1"
  }
}
